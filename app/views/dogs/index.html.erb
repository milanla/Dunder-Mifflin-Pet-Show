<h1>Dogs Index</h1>
  <%= form_tag '/dogs', method: "get" do %>
  <%= hidden_field_tag :query  %>
  <%= submit_tag "Sort by number of employees" %>
  <ul>
    <% @dogs.each do |dog| %>
    <li>
      <%= link_to dog.name, dog_path(dog) %><br>
      <%= dog.breed %><br>
      <%= dog.age %>
    </li>
    <% end %>
  </ul>
